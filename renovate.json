{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchDepTypes": ["project.dependencies"],
      "labels": ["dependencies"]
    },
    {
      "matchDepTypes": ["tool.uv.dev-dependencies"],
      "addLabels": ["dependencies:development"]
    }
  ]
}
